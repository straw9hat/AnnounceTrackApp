<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AnnounceTrackApp.Pages.LoginPage"
             BackgroundColor="White"
             Title="Login">

    <VerticalStackLayout Padding="30" Spacing="40" VerticalOptions="Center">
        <Label Text="Welcome to AnnounceTrack"
               FontSize="28"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <Button Text="Sign in with Google"
                Clicked="OnGoogleSignInClicked"
                BackgroundColor="#4285F4"
                TextColor="White"
                FontSize="18"
                CornerRadius="12"
                Padding="12,10"
                HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>
